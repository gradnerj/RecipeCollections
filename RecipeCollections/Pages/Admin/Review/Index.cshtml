@page
@model RecipeCollections.Pages.Admin.Review.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<div class="container">

    <p>
        <a asp-page="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Review[0].CreatorId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Review[0].RecipeId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Review[0].Rating)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Review) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatorId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RecipeId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rating)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
